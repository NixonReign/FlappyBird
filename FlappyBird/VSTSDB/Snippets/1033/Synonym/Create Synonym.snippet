<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
<_locDefinition xmlns="urn:locstudio">
    <_locDefault _loc="locNone" />
    <_locTag _loc="locData">Title</_locTag>
    <_locTag _loc="locData">Description</_locTag>
    <_locTag _loc="locData">Author</_locTag>
    <_locTag _loc="locData">ToolTip</_locTag>
</_locDefinition>
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>Create Synonym</Title>
                        <Shortcut></Shortcut>
			<Description>Creates a synonym.</Description>
			<Author>Microsoft Corporation</Author>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
                                <Literal>
                                	<ID>SynonymName</ID>
                                	<ToolTip>Name of the synonym</ToolTip>
                                	<Default>SynonymName</Default>
                                </Literal>
								<Literal>
									<ID>DefaultSchemaName</ID>
									<ToolTip>Name of the schema</ToolTip>
									<Default>dbo</Default>
								</Literal>
								<Literal>
                                	<ID>SchemaName</ID>
                                	<ToolTip>Name of the object schema</ToolTip>
                                	<Default>SchemaName</Default>
                                </Literal>
                                <Literal>
                                	<ID>ObjectName</ID>
                                	<ToolTip>Name of the database object for the synonym</ToolTip>
                                	<Default>object_name</Default>
                                </Literal>
			</Declarations>
			<Code Language="SQL"><![CDATA[
CREATE SYNONYM $DefaultSchemaName$.$SynonymName$
    FOR $SchemaName$.$ObjectName$
]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>
